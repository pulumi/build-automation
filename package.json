{
  "name": "@pulumi/build-automation",
  "description": "Automation to keep Github Actions workflows, makefiles and other build files up to date for Pulumi & third-party repositories",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pulumi/build-automation.git"
  },
  "private": true,
  "keywords": [
    "pulumi",
    "github-actions",
    "makefiles"
  ],
  "author": "Pulumi",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/pulumi/build-automation/issues"
  },
  "homepage": "https://github.com/pulumi/build-automation#readme",
  "bin": {
    "pulumi-generate-provider-workflows": "bin/provider.js",
    "pulumi-generate-bridged-provider-workflows": "bin/providers-bridged.js",
    "pulumi-generate-native-provider-workflows": "bin/providers-native.js",
    "pulumi-generate-provider-examples": "bin/examples.js"
  },
  "dependencies": {
    "yaml": "^2.1.3",
    "yargs": "^17.6.2",
    "zod": "^3.20.2",
    "zod-to-json-schema": "^3.20.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@jest/globals": "^29.4.1",
    "@types/yargs": "^17.0.17",
    "@types/node": "^18.11.15",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "babel-jest": "^29.4.1",
    "eslint": "^8.29.0",
    "jest": "^29.4.1",
    "json-schema-to-typescript": "^11.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "gen-config-schema": "ts-node cmd/generate-config-schema.ts",
    "discovery": "wget https://json.schemastore.org/github-workflow.json -O github-workflow.json && json2ts -i github-workflow.json -o src/provider/github-workflow.d.ts --unreachableDefinitions --ignoreMinAndMaxItems",
    "test": "jest unit/"
  },
  "volta": {
    "node": "16.15.0"
  }
}
